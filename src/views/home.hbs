<div class="mt-4">
  <div class="row">
    {{#each products}}
      <div class="col-sm-6 col-lg-4" style="width: 20rem; top:5rem">
        <div class="card h-100" style="width: 100%;">
          <img
            src="{{this.variations.0.image}}"
            class="card-img-top"
            alt="{{this.name}}"
            style="height: 15rem; object-fit: cover;"
          />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.name}}</h5>
            <p
              class="card-text text-truncate-multiline"
              style="margin: 10px 0;"
            >
              {{this.description}}
            </p>

            <div style="display: flex; justify-content: space-between">
              <p>Price: {{this.price}}$</p>
              <p>Stock: {{this.totalQuantity}}</p>
            </div>

            <a
              href="/admin/products/{{this.slug}}"
              class="btn btn-primary mt-auto"
            >More detail</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>